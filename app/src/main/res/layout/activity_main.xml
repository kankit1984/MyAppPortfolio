<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/nano_degree_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/spotify_streamer"
        android:id="@+id/button_spotify_streamer"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

    <Button
        android:text="@string/xyz_reader"
        android:id="@+id/button_xyz_reader"
        android:layout_below="@+id/button_build_it_bigger"
        android:layout_alignLeft="@+id/button_build_it_bigger"
        android:layout_alignStart="@+id/button_build_it_bigger"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/button_build_it_bigger"
        android:layout_alignEnd="@+id/button_build_it_bigger"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

    <Button
        android:text="@string/build_it_bigger"
        android:id="@+id/button_build_it_bigger"
        android:layout_below="@+id/button_lib_app"
        android:layout_marginTop="39dp"
        android:layout_alignLeft="@+id/button_lib_app"
        android:layout_alignStart="@+id/button_lib_app"
        android:layout_alignRight="@+id/button_lib_app"
        android:layout_alignEnd="@+id/button_lib_app"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

    <Button
        android:text="@string/lib_app"
        android:id="@+id/button_lib_app"
        android:layout_below="@+id/button_fotball_scores"
        android:layout_alignLeft="@+id/button_fotball_scores"
        android:layout_alignStart="@+id/button_fotball_scores"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/button_fotball_scores"
        android:layout_alignEnd="@+id/button_fotball_scores"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

    <Button
        android:text="@string/football_scores_app"
        android:id="@+id/button_fotball_scores"
        android:layout_below="@+id/button_spotify_streamer"
        android:layout_marginTop="33dp"
        android:layout_alignLeft="@+id/button_spotify_streamer"
        android:layout_alignStart="@+id/button_spotify_streamer"
        android:layout_alignRight="@+id/button_spotify_streamer"
        android:layout_alignEnd="@+id/button_spotify_streamer"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

    <Button
        android:text="@string/capstone_app"
        android:id="@+id/button_capstone_app"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_build_it_bigger"
        android:layout_alignStart="@+id/button_build_it_bigger"
        android:layout_alignRight="@+id/button_build_it_bigger"
        android:layout_alignEnd="@+id/button_build_it_bigger"
        android:onClick="showToast"
        style="@style/button_common_style"
        />

</RelativeLayout>
